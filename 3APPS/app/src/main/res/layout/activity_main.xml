<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAPP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="sans-serif-black"
        android:onClick="btnAPP1OnClick"
        android:text="@string/btnAPP1"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAPP2"
        app:layout_constraintEnd_toStartOf="@+id/btnAPP2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAPP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="casual"
        android:onClick="btnAPP2OnClick"
        android:text="@string/btnAPP2"
        app:layout_constraintEnd_toStartOf="@+id/btnAPP3"
        app:layout_constraintStart_toEndOf="@+id/btnAPP1"
        app:layout_constraintTop_toBottomOf="@+id/btnAPP5" />

    <Button
        android:id="@+id/btnAPP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:fontFamily="sans-serif-thin"
        android:onClick="btnAPP3OnClick"
        android:text="@string/btnAPP3"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAPP2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAPP2" />

    <Button
        android:id="@+id/btnAPP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="cursive"
        android:onClick="btnAPP4OnClick"
        android:text="@string/btnAPP4"
        app:layout_constraintStart_toStartOf="@+id/btnAPP1"
        app:layout_constraintTop_toBottomOf="@+id/btnAPP3" />

    <Button
        android:id="@+id/btnAPP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:backgroundTint="#F44336"
        android:fontFamily="monospace"
        android:onClick="btnAPP5OnClick"
        android:text="@string/btnAPP5"
        app:layout_constraintStart_toEndOf="@+id/btnAPP1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>